<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Fertile Fields [1.1]</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
			
			<li Class="PatchOperationAdd"> 
				<xpath>/Defs/TerrainDef[defName = "ZBiome_WaterChestDeep"]/affordances</xpath>
				<value>
					<li>WaterDeep</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd"> 
				<xpath>/Defs/TerrainDef[defName = "ZBiome_WaterOceanChestDeep"]/affordances</xpath>
				<value>
					<li>WaterDeep</li>
				</value>
			</li>
			
			</operations>
		</match>
	</Operation>
</Patch>

