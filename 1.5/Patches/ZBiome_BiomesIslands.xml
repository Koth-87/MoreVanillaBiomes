<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biomes! Islands</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>

	<!-- Sandbar -->

				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "ZBiome_Sandbar_NoBeach"]/plantDensity</xpath>
					<value>
						<plantDensity>0.6</plantDensity>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "ZBiome_Sandbar_NoBeach"]/animalDensity</xpath>
					<value>
						<animalDensity>0.5</animalDensity>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName = "ZBiome_Sandbar_NoBeach"]/wildPlants</xpath>
