						<BMT_Dolphin>0.3</BMT_Dolphin>
						<BMT_Swordfish>0.09</BMT_Swordfish>
						<BiomesIslands_Tuna>0.15</BiomesIslands_Tuna>
						<BiomesIslands_Hammerhead>0.2</BiomesIslands_Hammerhead>
						<BiomesIslands_WhiteShark>0.2</BiomesIslands_WhiteShark>


					</value>
				</li>

	<!-- Coastal Dunes -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName = "ZBiome_CoastalDunes"]/wildPlants</xpath>
					<value>
