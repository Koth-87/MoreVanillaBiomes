<?xml version="1.0" encoding="utf-8" ?>
<Patch>


<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Fishing Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/VCE_Fishing.BiomeTempDef[defName="VCEF_BiomeCold"]/biomes</xpath>
					<value>
						<li>ZBiome_Iceberg_NoBeach</li>
						<li>ZBiome_AlpineMeadow</li>
						<li>ZBiome_Marsh</li>					
					</value>	
				</li>
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/VCE_Fishing.BiomeTempDef[defName="VCEF_BiomeWarm"]/biomes</xpath>
				<value>
					<li>ZBiome_Grasslands</li>	
					<li>ZBiome_CoastalDunes</li>			
				</value>	
				</li> 
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/VCE_Fishing.BiomeTempDef[defName="VCEF_BiomeCold"]/biomes</xpath>
					<value>
						<li>ZBiome_Iceberg_NoBeach</li>
						<li>ZBiome_AlpineMeadow</li>
						<li>ZBiome_Marsh</li>					
					</value>	
				</li> 
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/VCE_Fishing.BiomeTempDef[defName="VCEF_BiomeHot"]/biomes</xpath>
					<value>
						<li>ZBiome_DesertOasis</li>		
						<li>ZBiome_CloudForest</li>
						<li>ZBiome_Sandbar_NoBeach</li>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/VCE_Fishing.FishableTerrainDef[defName="VCEF_VanillaFishableTerrainsOcean"]/allowedTerrains</xpath>
					<value>
						<li>ZBiome_WaterOceanChestDeep</li>
					</value>	
				</li>
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/VCE_Fishing.FishableTerrainDef[defName="VCEF_VanillaFishableTerrains\"]/allowedTerrains</xpath>
					<value>
						<li>ZBiome_WaterChestDeep</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>

